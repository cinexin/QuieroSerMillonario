<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="upv.ejercicios.proyectofinal.quierosermillonario">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".gui.MainScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".gui.CreditsActivity"
            android:parentActivityName=".gui.MainScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.MainScreen"
                />
        </activity>

        <activity android:name=".gui.SettingsActivity"
            android:parentActivityName=".gui.MainScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.MainScreen"
                />
        </activity>

        <activity android:name=".gui.HighScoresActivity"
            android:parentActivityName=".gui.MainScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.MainScreen"
                />
        </activity>

        <activity android:name=".gui.PlayGameActivity"
            android:parentActivityName=".gui.MainScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.MainScreen"/>
        </activity>
    </application>

</manifest>